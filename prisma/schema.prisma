// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @unique
  name     String?
  password String
  username String    @unique
  sessions Session[]

  @@map("user")
}

model Session {
  id        String   @id @unique
  expiresAt DateTime
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  slug        String   @unique
  title       String
  description String
  markdown    String
  html        String
  published   Boolean  @default(false)

  @@map("post")
}
